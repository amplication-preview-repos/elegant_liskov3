datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Visitor {
  capturedImage  Json?
  createdAt      DateTime   @default(now())
  firstName      String?
  id             String     @id @default(cuid())
  idNumber       String?
  idPresented    String?
  lastName       String?
  location       String?
  personToVisit  String?
  purposeOfVisit String?
  updatedAt      DateTime   @updatedAt
  visitLogs      VisitLog[]
}

model VisitLog {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  visitor   Visitor? @relation(fields: [visitorId], references: [id])
  visitorId String?
}

model Role {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
  visitLogs VisitLog[]
}
